{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bicycle facility fields/attributes",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "FeatureCollection"
    },
    "name": {
      "type": "string"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "const": "Feature"
          },
          "properties": {
            "type": "object",
            "required": [
              "BIKE"
            ],
            "properties": {
              "id": {
                "type": [
                  "number",
                  "string"
                ],
                "description": "A unique and stable identifier for the road segment.",
                "examples": ["14232514"]
              },
              "Usage": {
                "type": "string",
                "const": "Bike Lane",
                "description": "Usage of the path. Restricted to one value."
              },
              "Road Name": {
                "type": "string",
                "description": "Road name.",
                "examples": ["Pine Street"]
              },
              "BIKE": {
                "type": "string",
                "enum": [
                  "SEPARATE_TRAIL",
                  "SHARED_ROAD",
                  "BIKE_LANE"
                ],
                "description": "Whether the segment allows bikes, and if so, what route type it is.",
                "examples": ["SEPARATE_TRAIL"]
              },
              "ST_NAME": {
                "type": "string",
                "description": "Street Name and Type (the words Street, Avenue can be abbreviated)",
                "examples": ["Stone Way N."]
              },
              "RT_NAME": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "Route Name.",
                "examples": ["Southeast 52nd Street."]
              },
              "BIKE_RT": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "Bike Route Name.",
                "examples": ["Burke-Gilman Trail", "Cheshiahud Lake Union Loop"]
              },
              "NEIGHBH": {
                "type": [
                  "string",
                  "null"
                ],
              "description": "Neighborhood name.",
              "examples": ["Wallingford"]
              },
              "CITY": {
                "type": "string",
                "description": "City name.",
                "examples": ["Seattle"]
              },
              "ADMIN": {
                "type": "string",
                "description": "Highest level of administrative area.",
                "examples": ["WA, New South Wales", "County Cork"]                
              },
              "POSTAL": {
                "type": [
                  "string",
                  "integer"
                ],
                "description": "Zip code / postal code.",
                "examples": [98101]
              },
              "SURFACE": {
                "type": "string",
                "enum": [
                  "Paved",
                  "Unpaved",
                  null
                ],
                "description": "Road Surface.",
                "examples": ["Paved"]
              },
              "SPEED_LM": {
                "type": [
                  "number",
                  "string",
                  "null"
                ],
                "description": "Speed limit in MPH or KPH",
                "examples": ["32 KPH", "20mph"]
              },
              "CAR_RESTR": {
                "type": [
                  "string",
                  "null"
                ],
                "enum": [
                  "DISALLOWED",
                  "ALLOWED",
                  null
                ],
                "description": "Whether the segment allows cars and trucks.",
                "examples": ["ALLOWED"]
              },
              "PED_RESTR": {
                "type": [
                  "string",
                  "null"
                ],
                "enum": [
                  "DISALLOWED",
                  "ALLOWED",
                  null
                ],
                "description": "Whether the segment allows pedestrian use",
                "examples": ["ALLOWED"]
              },
              "DIR": {
                "type": [
                  "string",
                  "null"
                ],
                "enum": [
                  "BI-DIRECTIONAL",
                  "FORWARD",
                  "REVERSE",
                  null
                ],
                "description": "Identifies the direction of travel.",
                "examples": ["FORWARD"]
              },
              "BIKESAFETY": {
                "type": "string",
                "enum": [
                  "RECOMMENDED",
                  "CAUTION",
                  "NEUTRAL",
                  "ILLEGAL",
                  null
                ],
                "description": "Are there any known safety concerns with this bicycle route.",
                "examples": ["RECOMMENDED"]
              }
            }
          },
          "geometry": {
            "type": "object",
            "required": [
              "type",
              "coordinates"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "MultiLineString",
                  "LineString"
                ]
              },
              "coordinates": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}